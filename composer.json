{
  "name": "alamellama/carapace",
  "description": "Framework-agnostic DTOs for PHP",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Alamellama\\Carapace\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Nicholas Ciechanowski",
      "email": "nicholas@ciech.anow.ski"
    }
  ],
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "laravel/pint": "^1.24",
    "peckphp/peck": "^0.1.3",
    "pestphp/pest": "^3|^4",
    "phpstan/phpstan": "^2.1",
    "rector/rector": "^2.1"
  },
  "scripts": {
    "refactor": "rector",
    "lint": "pint --parallel",
    "fix": [
      "@refactor",
      "@lint"
    ],
    "test:refactor": "rector --dry-run",
    "test:typos": "peck",
    "test:lint": "pint --parallel --test",
    "test:types": "phpstan analyse --ansi",
    "test:unit": "pest --colors=always --coverage --min=88.9",
    "test": [
      "@test:refactor",
      "@test:lint",
      "@test:types",
      "@test:typos",
      "@test:unit"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
